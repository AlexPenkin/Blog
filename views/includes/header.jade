block header
  div.head
    nav.nav
      //- a(href = '/').navbar-brand Alexander Penkin
      div.menu
        img(src='./img/Swash_ornament.svg').ornamentLeft
        a(href = '/').menuLink Blog
        a(href = '/portfolio').menuLink Portfolio


      div.logo AlexPenkin
      div.userMenu

        if user && user.username == 'Admin'
          a(href = '/makePost').menuLink Add Post
        if user
          a().menuLink.userName#username #{user.username}
          a(href = '/logOut').menuLink Выйти
        else
          //a(href = '/login').menuLink Войти
          a.menuLink About me
          a(href = '/login').menuLink Contacts
          //a(href = '/signUp').menuLink ???
        img(src='./img/Swash_ornament.svg').ornamentRight

  div.drawer.drawer--top
    header(role="banner")
      a(href= '/').HeadName.logo AlexPenkin
      button(type="button").drawer-toggle.drawer-hamburger
        span.sr-only toggle navigation
        span.drawer-hamburger-icon

      nav(role="navigation").drawer-nav
        div.menu
          a(href = '/').menuLink Blog
          a(href = '/portfolio').menuLink Portfolio
          a.menuLink About me
          a().menuLink Contacts
          img(src='./img/curvesOrnament2.png').ornamentMobile

          if user && user.username == 'Admin'
            a(href = '/makePost').menuLink Add Post

